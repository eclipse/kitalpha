<plugin>
   <extension-point id="org.polarsys.kitalpha.model.detachment.ui.page" name="page" schema="schema/page.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.polarsys.kitalpha.model.detachment.ui.editor.ModelDetachment"
            default="false"
            icon="icons/detach_icon.png"
            id="org.polarsys.kitalpha.model.detachment.ui.editor"
            name="%DETACHMENT_EDITOR">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.eclipse.core.resources.IResource"
            nameFilter="*.aird"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               icon="icons/Kitalpha_Logo_alpha.png"
               id="org.polarsys.kitalpha.model.detachment.ui.menu.architectureDescription"
               label="%MODEL_POPUPMENU_NAME"
               path="additions">
            <groupMarker
                  name="%AD_MODEL_DETACHMENT_NAME">
            </groupMarker>
         </menu>
         <action
               class="org.polarsys.kitalpha.model.detachment.ui.action.ModelDetachmentAction"
               icon="icons/detach_icon.png"
               id="org.polarsys.kitalpha.model.detachment.ui.detachment"
               label="%MODEL_MODEL_DETACHMENT_NAME"
               menubarPath="org.polarsys.kitalpha.model.detachment.ui.menu.architectureDescription/detachment">
         </action>
      </objectContribution>
   </extension>

</plugin>
